<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="core">
		<fieldset name="display" label="XML_LABEL_F_DISPLAY">
			<field labelclass="form-label" name="show_intro" type="radio" layout="joomla.form.field.radio.switcher" default="1"
				   label="XML_LABEL_F_SHOW_INTRO" description="XML_DESCR_F_SHOW_INTRO">
				<option value="0">CNO</option>
				<option value="1">CYES</option>
			</field>
			<field labelclass="form-label" name="show_full" type="radio" layout="joomla.form.field.radio.switcher" default="1"
				   label="XML_LABEL_F_SHOW_FULL" description="XML_DESCR_F_SHOW_FULL">
				<option value="0">CNO</option>
				<option value="1">CYES</option>
			</field>
			<field labelclass="form-label" name="show_feed" type="radio" layout="joomla.form.field.radio.switcher" default="0"
				   label="XML_LABEL_F_SHOW_FEED" description="XML_DESCR_F_SHOW_FEED">
				<option value="0">CNO</option>
				<option value="1">CYES</option>
			</field>
			<field labelclass="form-label" name="show_compare" type="radio" layout="joomla.form.field.radio.switcher" default="1"
				   label="XML_LABEL_F_SHOW_COMPARE" description="XML_DESCR_F_SHOW_COMPARE">
				<option value="0">CNO</option>
				<option value="1">CYES</option>
			</field>
		</fieldset>
		<fieldset name="general" label="XML_LABEL_F_GP">

			<field labelclass="form-label" name="required" type="radio" layout="joomla.form.field.radio.switcher" default="0" label="XML_LABEL_F_REQ">
				<option value="0">CNO</option>
				<option value="1">CYES</option>
			</field>
			<field labelclass="form-label" name="searchable" type="radio" layout="joomla.form.field.radio.switcher" default="0"
				   label="XML_LABEL_F_SEARCHABLE2" description="XML_LABEL_SEARCHABLE_DESCR">
				<option value="0">CNO</option>
				<option value="1">CYES</option>
			</field>
			<field labelclass="form-label" name="description" type="textarea" default=""
				   label="CDESCR" cols="30" rows="5" description="XML_DESCR_F_DESCR"/>
			<field labelclass="form-label" name="xml_tag_name" type="text" default="" size="30"
				   label="XML_LABEL_F_TAG" description="XML_DESCR_F_TAG"/>
			<field labelclass="form-label" name="field_class" type="text" size="30" default=""
				   label="XML_LABEL_F_CLASS"/>
		</fieldset>
		<fieldset name="label" label="XML_LABEL_F_LBL">
			<field labelclass="form-label" name="show_lable" type="list" default="3"
				   label="XML_LABEL_F_LBL_SHOW">
				<option value="0">XML_OPT_SLHL</option>
				<option value="1">XML_OPT_SLSUBFORM</option>
				<option value="2">XML_OPT_SLREC</option>
				<option value="3">XML_OPT_SLBOTH</option>
			</field>
			<field labelclass="form-label" name="label_break" type="list" default="0"
				   label="XML_LABEL_F_LBL_BREAKAFTER">
				<option value="0">XML_OPT_BL_NO</option>
				<option value="1">XML_OPT_BLSF</option>
				<option value="2">XML_OPT_BLRF</option>
				<option value="3">XML_OPT_BLBOTH</option>
			</field>
			<field labelclass="form-label" name="lable_class" type="text" size="20" default=""
				   label="XML_LABEL_F_LBL_CLASS"/>
			<field labelclass="form-label" name="label_icon_type" type="list" default="0"
				   label="XML_LABEL_F_LBL_ICON_TYPE" filter="integer">
				<option value="0">Image</option>
				<option value="1">Font</option>
			</field>
			<field showon="label_icon_type:1" labelclass="form-label" name="label_icon_class" type="text" size="20" default="" hint="Example: fas fa-list"
				   label="XML_LABEL_F_LBL_ICON_CLASS"/>
			<field showon="label_icon_type:0" labelclass="form-label" name="icon" type="fieldicon" default=""
				   label="XML_LABEL_F_LBL_ICON"/>
		</fieldset>
		<fieldset name="access2_view" label="XML_LABEL_F_VIEW_ACCESS">
			<field labelclass="form-label" name="field_view_access" type="accesslevel" default="1"
				   label="XML_LABEL_F_VIEW_WHO">
				<option value="0">XML_OPT_NOONE</option>
			</field>
			<field labelclass="form-label" name="field_view_message" type="text"
				   default="You cannot view this field" label="XML_LABEL_F_MSG"/>
		</fieldset>
		<fieldset name="access2_submit" label="XML_LABEL_F_SUBMIT_ACCESS">
			<field labelclass="form-label" name="field_submit_access" type="accesslevel" default="1"
				   label="XML_LABEL_F_SUBMIT_WHO">
				<option value="0">XML_OPT_NOONE</option>
			</field>
			<field labelclass="form-label" name="field_submit_message" type="text"
				   default="You cannot submit this field" label="XML_LABEL_F_MSG"/>
		</fieldset>
		<fieldset name="access2_edit" label="XML_LABEL_F_EDIT_ACCESS">
			<field labelclass="form-label" name="field_edit_access" type="accesslevel" default="1"
				   label="XML_LABEL_F_EDIT_WHO">
				<option value="0">XML_OPT_NOONE</option>
			</field>
			<field labelclass="form-label" name="field_edit_message" type="text"
				   default="You cannot edit this field" label="XML_LABEL_F_MSG"/>
		</fieldset>
	</fields>
	<fields name="emerald">
		<fieldset name="sp" label="CEMERALDGENERAL">
			<field labelclass="form-label" name="subscr_skip" type="accesslevel" default="3" label="XML_LABEL_F_SUB_SKIP_WHO" description="XML_DECRSKIPSUBSCRACCESS">
				<option value="0">XML_OPT_NOONE</option>
			</field>
			<field labelclass="form-label" name="subscr_skip_author" type="radio" layout="joomla.form.field.radio.switcher" default="1" label="XML_LABEL_F_SUB_SKIP_AUTHOR">
				<option value="0">CNO</option>
				<option value="1">CYES</option>
			</field>
			<field labelclass="form-label" name="subscr_skip_moderator" type="radio" layout="joomla.form.field.radio.switcher" default="1" label="XML_LABEL_F_SUB_SKIP_MODER" description="XML_SUBSRESTRSKIPMODER">
				<option value="0">CNO</option>
				<option value="1">CYES</option>
			</field>
		</fieldset>

		<fieldset name="sp4" label="XML_LABEL_F_SUB_RESTRICT_DISPLAY" description="XML_DESKRDISPLAURESTRICTSUBSCR">
			<field labelclass="form-label" name="field_display_subscription" type="cplanslist" multiple="true" class="form-select" default="" label="XML_LABEL_SUB_PLANS"/>
			<field labelclass="form-label" name="field_display_subscription_msg" type="text" size="40" default="You can view this field only if article author has subscription." label="XML_LABEL_SUB_MSG" rows="6" cols="30"/>
			<field labelclass="form-label" name="field_display_subscription_count" type="radio" layout="joomla.form.field.radio.switcher" default="0" label="XML_LABEL_SUB_COUNT">
				<option value="0">CNO</option>
				<option value="1">CYES</option>
			</field>
		</fieldset>

		<fieldset name="sp2" label="XML_LABEL_F_SUB_RESTRICT_ADD" description="XML_DESCRRESTRADD">
			<field labelclass="form-label" name="field_submit_subscription" type="cplanslist" multiple="multiple" class="form-select" default="" label="XML_LABEL_SUB_PLANS"/>
			<field labelclass="form-label" name="field_submit_subscription_msg" type="text" size="40" default="Only our paid members can vew add this field." label="XML_LABEL_SUB_MSG" rows="6" cols="30"/>
			<field labelclass="form-label" name="field_submit_subscription_count" type="radio" layout="joomla.form.field.radio.switcher" default="0" label="XML_LABEL_SUB_COUNT">
				<option value="0">CNO</option>
				<option value="1">CYES</option>
			</field>
		</fieldset>

		<fieldset name="sp21" label="XML_LABEL_F_SUB_RESTRICT_EDIT" description="XML_DESCRSUSCREDITRESTRICT">
			<field labelclass="form-label" name="field_edit_subscription" type="cplanslist" multiple="multiple" class="form-select" default="" label="XML_LABEL_SUB_PLANS"/>
			<field labelclass="form-label" name="field_edit_subscription_msg" type="text" size="40" default="Only our paid members can edit this field." label="XML_LABEL_SUB_MSG" rows="6" cols="30"/>
			<field labelclass="form-label" name="field_edit_subscription_count" type="radio" layout="joomla.form.field.radio.switcher" default="0" label="XML_LABEL_SUB_COUNT">
				<option value="0">CNO</option>
				<option value="1">CYES</option>
			</field>
		</fieldset>

		<fieldset name="sp3" label="XML_LABEL_F_SUB_RESTRICT_EDIT_VIEW" description="XML_DESCSUSRCVIEWRESTRICT">
			<field labelclass="form-label" name="field_view_subscription" type="cplanslist" multiple="multiple" class="form-select" default="" label="XML_LABEL_SUB_PLANS"/>
			<field labelclass="form-label" name="field_view_subscription_msg" type="text" size="40" default="Only our paid members can view this field." label="XML_LABEL_SUB_MSG" rows="6" cols="30"/>
			<field labelclass="form-label" name="field_view_subscription_count" type="radio" layout="joomla.form.field.radio.switcher" default="0" label="XML_LABEL_SUB_COUNT">
				<option value="0">CNO</option>
				<option value="1">CYES</option>
			</field>
		</fieldset>
	</fields>
</form>
