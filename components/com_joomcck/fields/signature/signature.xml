<?xml version="1.0" encoding="utf-8"?>
<joomcckfield>
	<name>Signature</name>
	<group>Advanced Form Elements</group>

	<config>
		<fields name="params">
			<fieldset name="tmpl">
				<field class="form-select" type="cobtmpllist" name="template_input" onchange="ajax_load_sub_params(this, 'components/com_joomcck/fields/signature/tmpl/input');" filter="php$" hide_none="1" hide_default="1" directory="components/com_joomcck/fields/signature/tmpl/input" label="F_TMPLINPUT" default="default.php" />
				<field class="form-select" type="cobtmpllist" name="template_output_list" onchange="ajax_load_sub_params(this, 'components/com_joomcck/fields/signature/tmpl/output');" filter="php$" hide_none="1" hide_default="1" directory="components/com_joomcck/fields/signature/tmpl/output" label="F_TMPLLIST" default="list.php" />
				<field class="form-select" type="cobtmpllist" name="template_output_full" onchange="ajax_load_sub_params(this, 'components/com_joomcck/fields/signature/tmpl/output');" filter="php$" hide_none="1" hide_default="1" directory="components/com_joomcck/fields/signature/tmpl/output" label="F_TMPLFULL" default="full.php" />
			</fieldset>

			<fieldset name="signature_settings" label="COM_JOOMCCK_FIELD_SIGNATURE_SETTINGS">
				<field name="canvas_width" type="number" default="600" label="COM_JOOMCCK_FIELD_SIGNATURE_CANVAS_WIDTH" description="COM_JOOMCCK_FIELD_SIGNATURE_CANVAS_WIDTH_DESC" />
				<field name="canvas_height" type="number" default="300" label="COM_JOOMCCK_FIELD_SIGNATURE_CANVAS_HEIGHT" description="COM_JOOMCCK_FIELD_SIGNATURE_CANVAS_HEIGHT_DESC" />
				
				<field name="pen_color" type="color" default="#000000" label="COM_JOOMCCK_FIELD_SIGNATURE_PEN_COLOR" description="COM_JOOMCCK_FIELD_SIGNATURE_PEN_COLOR_DESC" />
				<field name="pen_width" type="number" default="2" label="COM_JOOMCCK_FIELD_SIGNATURE_PEN_WIDTH" description="COM_JOOMCCK_FIELD_SIGNATURE_PEN_WIDTH_DESC" />
				
				<field name="background_color" type="color" default="#FFFFFF" label="COM_JOOMCCK_FIELD_SIGNATURE_BACKGROUND_COLOR" description="COM_JOOMCCK_FIELD_SIGNATURE_BACKGROUND_COLOR_DESC" />
				
				<field name="show_clear_button" type="mradio" class="btn-group" default="1" label="COM_JOOMCCK_FIELD_SIGNATURE_SHOW_CLEAR_BUTTON" description="COM_JOOMCCK_FIELD_SIGNATURE_SHOW_CLEAR_BUTTON_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				
				<field name="show_undo_button" type="mradio" class="btn-group" default="1" label="COM_JOOMCCK_FIELD_SIGNATURE_SHOW_UNDO_BUTTON" description="COM_JOOMCCK_FIELD_SIGNATURE_SHOW_UNDO_BUTTON_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				
				<field name="responsive" type="mradio" class="btn-group" default="1" label="COM_JOOMCCK_FIELD_SIGNATURE_RESPONSIVE_CANVAS" description="COM_JOOMCCK_FIELD_SIGNATURE_RESPONSIVE_CANVAS_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
			</fieldset>

			<fieldset name="storage_settings" label="COM_JOOMCCK_FIELD_SIGNATURE_STORAGE_SETTINGS">
				<field name="directory" type="text" default="images/signatures" label="COM_JOOMCCK_FIELD_SIGNATURE_STORAGE_DIRECTORY" description="COM_JOOMCCK_FIELD_SIGNATURE_STORAGE_DIRECTORY_DESC" />
				
				<field name="image_format" type="list" default="png" label="COM_JOOMCCK_FIELD_SIGNATURE_IMAGE_FORMAT" description="COM_JOOMCCK_FIELD_SIGNATURE_IMAGE_FORMAT_DESC">
					<option value="png">PNG</option>
					<option value="jpg">JPEG</option>
				</field>
				
				<field name="image_quality" type="number" default="90" label="COM_JOOMCCK_FIELD_SIGNATURE_IMAGE_QUALITY" description="COM_JOOMCCK_FIELD_SIGNATURE_IMAGE_QUALITY_DESC" />
			</fieldset>

			<fieldset name="display_settings" label="COM_JOOMCCK_FIELD_SIGNATURE_DISPLAY_SETTINGS">
				<field name="show_border" type="mradio" class="btn-group" default="1" label="COM_JOOMCCK_FIELD_SIGNATURE_SHOW_BORDER" description="COM_JOOMCCK_FIELD_SIGNATURE_SHOW_BORDER_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				
				<field name="border_color" type="color" default="#CCCCCC" label="COM_JOOMCCK_FIELD_SIGNATURE_BORDER_COLOR" description="COM_JOOMCCK_FIELD_SIGNATURE_BORDER_COLOR_DESC" />
				
				<field name="placeholder_text" type="text" default="Sign here..." label="COM_JOOMCCK_FIELD_SIGNATURE_PLACEHOLDER_TEXT" description="COM_JOOMCCK_FIELD_SIGNATURE_PLACEHOLDER_TEXT_DESC" />
				
				<field name="max_display_width" type="number" default="300" label="COM_JOOMCCK_FIELD_SIGNATURE_MAX_DISPLAY_WIDTH" description="COM_JOOMCCK_FIELD_SIGNATURE_MAX_DISPLAY_WIDTH_DESC" />
				<field name="max_display_height" type="number" default="150" label="COM_JOOMCCK_FIELD_SIGNATURE_MAX_DISPLAY_HEIGHT" description="COM_JOOMCCK_FIELD_SIGNATURE_MAX_DISPLAY_HEIGHT_DESC" />
			</fieldset>

			<fieldset name="validation" label="COM_JOOMCCK_FIELD_SIGNATURE_VALIDATION">
				<field name="min_strokes" type="number" default="1" label="COM_JOOMCCK_FIELD_SIGNATURE_MIN_STROKES" description="COM_JOOMCCK_FIELD_SIGNATURE_MIN_STROKES_DESC" />
				
				<field name="require_signature" type="mradio" class="btn-group" default="0" label="COM_JOOMCCK_FIELD_SIGNATURE_REQUIRE_SIGNATURE" description="COM_JOOMCCK_FIELD_SIGNATURE_REQUIRE_SIGNATURE_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
			</fieldset>

			<fieldset name="mobile_settings" label="COM_JOOMCCK_FIELD_SIGNATURE_MOBILE_SETTINGS">
				<field name="touch_enabled" type="mradio" class="btn-group" default="1" label="COM_JOOMCCK_FIELD_SIGNATURE_TOUCH_SUPPORT" description="COM_JOOMCCK_FIELD_SIGNATURE_TOUCH_SUPPORT_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				
				<field name="mobile_pen_width" type="number" default="3" label="COM_JOOMCCK_FIELD_SIGNATURE_MOBILE_PEN_WIDTH" description="COM_JOOMCCK_FIELD_SIGNATURE_MOBILE_PEN_WIDTH_DESC" />
			</fieldset>
		</fields>
	</config>
</joomcckfield>