<?xml version="1.0" encoding="utf-8"?>
<fieldparams>
    <form>
        <fields name="tmpl_list">
            <fieldset name="general" label="COM_JOOMCCK_FIELD_SIGNATURE_OUTPUT_GENERAL">
                <field name="show_border" type="radio"
                       layout="joomla.form.field.radio.switcher" default="0" label="COM_JOOMCCK_FIELD_SIGNATURE_SHOW_BORDER" description="COM_JOOMCCK_FIELD_SIGNATURE_SHOW_BORDER_DESC">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
                <field name="max_display_width" type="number" default="300" label="COM_JOOMCCK_FIELD_SIGNATURE_MAX_DISPLAY_WIDTH" description="COM_JOOMCCK_FIELD_SIGNATURE_MAX_DISPLAY_WIDTH_DESC" min="50" max="1000" step="10" />
                <field name="max_display_height" type="number" default="150" label="COM_JOOMCCK_FIELD_SIGNATURE_MAX_DISPLAY_HEIGHT" description="COM_JOOMCCK_FIELD_SIGNATURE_MAX_DISPLAY_HEIGHT_DESC" min="50" max="500" step="10" />
                <field name="alt_text" type="text" default="" label="COM_JOOMCCK_FIELD_SIGNATURE_ALT_TEXT" description="COM_JOOMCCK_FIELD_SIGNATURE_ALT_TEXT_DESC" />
            </fieldset>
            <fieldset name="display_options" label="COM_JOOMCCK_FIELD_SIGNATURE_DISPLAY_OPTIONS">
