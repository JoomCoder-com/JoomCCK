                       layout="joomla.form.field.radio.switcher" default="1" label="COM_JOOMCCK_FIELD_SIGNATURE_SHOW_TIMESTAMP" description="COM_JOOMCCK_FIELD_SIGNATURE_SHOW_TIMESTAMP_DESC">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
                <field name="link_to_full" type="mradio"
                       layout="joomla.form.field.radio.switcher" default="1" label="COM_JOOMCCK_FIELD_SIGNATURE_LINK_TO_FULL" description="COM_JOOMCCK_FIELD_SIGNATURE_LINK_TO_FULL_DESC">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
                <field name="date_format" type="text" default="Y-m-d H:i:s" label="COM_JOOMCCK_FIELD_SIGNATURE_DATE_FORMAT" description="COM_JOOMCCK_FIELD_SIGNATURE_DATE_FORMAT_DESC" />
            </fieldset>
            <fieldset name="styling" label="COM_JOOMCCK_FIELD_SIGNATURE_STYLING">
                <field name="container_classes" type="text" default="" label="COM_JOOMCCK_FIELD_SIGNATURE_CONTAINER_CLASSES" description="COM_JOOMCCK_FIELD_SIGNATURE_CONTAINER_CLASSES_DESC" />
                <field name="image_classes" type="text" default="img-thumbnail" label="COM_JOOMCCK_FIELD_SIGNATURE_IMAGE_CLASSES" description="COM_JOOMCCK_FIELD_SIGNATURE_IMAGE_CLASSES_DESC" />
            </fieldset>
        </fields>
