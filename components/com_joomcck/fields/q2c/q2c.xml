				<field class="form-select" type="cobtmpllist" name="template_output_full" onchange="ajax_load_sub_params(this, 'components/com_joomcck/fields/q2c/tmpl/output');" filter="php$" hide_none="1" hide_default="1" directory="components/com_joomcck/fields/q2c/tmpl/output" label="F_TMPLFULL" default="default.php" />
			</fieldset>
			<fieldset name="general" label="FS_GENERAL" description="Q2C_DESCR">

			</fieldset>
		</fields>
	</config>
</joomcckfield>