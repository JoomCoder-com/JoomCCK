<?xml version="1.0" encoding="utf-8"?>
<joomcckfield>
	<name>Currency</name>
	<group>Special Form Elements</group>

	<config>
		<fields name="params">
			<fieldset name="tmpl">
				<field class="form-select" type="cobtmpllist" name="template_input" onchange="ajax_load_sub_params(this, 'components/com_joomcck/fields/currency/tmpl/input');" filter="php$" hide_none="1" hide_default="1" directory="components/com_joomcck/fields/currency/tmpl/input" label="F_TMPLINPUT" default="default.php" />
				<field class="form-select" type="cobtmpllist" name="template_output_list" onchange="ajax_load_sub_params(this, 'components/com_joomcck/fields/currency/tmpl/output');" filter="php$" hide_none="1" hide_default="1" directory="components/com_joomcck/fields/currency/tmpl/output" label="F_TMPLLIST" default="default.php" />
				<field class="form-select" type="cobtmpllist" name="template_output_full" onchange="ajax_load_sub_params(this, 'components/com_joomcck/fields/currency/tmpl/output');" filter="php$" hide_none="1" hide_default="1" directory="components/com_joomcck/fields/currency/tmpl/output" label="F_TMPLFULL" default="default.php" />
			</fieldset>
			<fieldset name="core">
				<field name="sortable" type="radio" class="btn-group" default="0" label="F_SORTABLE">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
			</fieldset>
			<fieldset name="filter" label="FS_FILTERGEN">
				<field name="filter_enable" type="mradio" condition='{"1":["params_params_template_filter","params_params_filter_hide","params_params_filter_descr","params_params_template_filter_module","fieldset-name-filter2"]}' class="btn-group" default="0" label="F_ENABLE" description="">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field class="form-select" type="cobtmpllist" name="template_filter" onchange="ajax_load_sub_params(this, 'components/com_joomcck/fields/currency/tmpl/filter');" filter="php$" hide_none="1" hide_default="1" directory="components/com_joomcck/fields/currency/tmpl/filter" label="F_TMPLFILTER" default="default.php" />
				<field class="form-select" type="cobtmpllist" name="template_filter_module" onchange="ajax_load_sub_params(this, 'components/com_joomcck/fields/currency/tmpl/filter');" filter="php$" hide_none="1" hide_default="1" directory="components/com_joomcck/fields/currency/tmpl/filter" label="F_TMPLFILTERMODULE" default="default.php" />
				<field name="filter_hide" type="mradio" class="btn-group" default="0" label="F_HIDE" description="F_HIDE_DESCR">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="filter_descr" type="text" default="" size="40" label="F_DESCR" description="" />
			</fieldset>

			<fieldset name="filter2" label="FS_FILTERFIELDSPEC">
				<field name="filter_worn" type="text" default="Between %s and %s" size="40" label="F_WORNING" />
				<field type="text" size="10" name="label_min" label="F_LABELMIN" description="F_LABELMIN_DESCR" default="Min" />
				<field type="text" size="10" name="label_max" label="F_LABELMAX" description="F_LABELMAX_DESCR" default="Max" />
				<field type="text" size="2" name="steps" label="F_STEPS" description="F_STEPSDESCR" default="0.01" />
			</fieldset>

			<fieldset name="currency" label="Currency Settings">
				<field name="currency_symbol" label="Currency Symbol" type="list" default="$" description="Select the currency symbol to display">
					<option value="$">$ (Dollar)</option>
					<option value="€">€ (Euro)</option>
					<option value="£">£ (Pound)</option>
					<option value="¥">¥ (Yen)</option>
					<option value="₹">₹ (Rupee)</option>
					<option value="₽">₽ (Ruble)</option>
					<option value="₩">₩ (Won)</option>
					<option value="₪">₪ (Shekel)</option>
					<option value="₦">₦ (Naira)</option>
					<option value="₨">₨ (Rupee)</option>
					<option value="custom">Custom Symbol</option>
				</field>
				<field name="custom_symbol" type="text" size="5" label="Custom Currency Symbol" description="Enter custom currency symbol (only used when 'Custom Symbol' is selected)" default="" />
				<field name="symbol_position" label="Symbol Position" type="radio" class="btn-group" default="before" description="Position of currency symbol relative to the amount">
					<option value="before">Before Amount</option>
					<option value="after">After Amount</option>
				</field>
			</fieldset>

			<fieldset name="general" label="FS_GENERAL">
				<field name="decimals_num" label="F_DECIMALPLACES" type="list" default="2" description="F_DECIMALPLACES_DESCR">
					<option value="0">XML_OPT_NONE</option>
					<option value="1">1</option>
					<option value="2">2</option>
					<option value="3">3</option>
					<option value="4">4</option>
				</field>
				<field name="max_num" label="F_INTLENGTH" type="text" size="2" default="15" description="Maximum number of digits allowed" />
				<field name="separator" label="F_THOUSANDSEPARATOR" type="text" size="2" default="," />
				<field name="dseparator" label="F_DECIMALSEPARATOR" type="text" size="2" default="." />
				<field name="val_min" label="F_MIN_VAL" type="text" size="10" default="" description="Minimum allowed currency value" />
				<field name="val_max" label="F_MAX_VAL" type="text" size="10" default="" description="Maximum allowed currency value" />
			</fieldset>

			<fieldset name="display" label="Display Options">
				<field name="show_symbol_input" type="radio" class="btn-group" default="1" label="Show Symbol in Input" description="Display currency symbol in the input field">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="input_placeholder" type="text" size="20" label="Input Placeholder" description="Placeholder text for the input field" default="0.00" />
				<field name="field_size" type="text" size="3" label="Input Field Size" description="Size attribute for the input field" default="10" />
			</fieldset>
		</fields>
	</config>
</joomcckfield>