<?xml version="1.0" encoding="utf-8"?>
<extension version="3.0" type="plugin" group="mint" method="upgrade">
	<name>Joomcck - Plugin - Formatter - JSON</name>
    <author>JoomBoost</author>
    <creationDate>October 15 2012</creationDate>
    <copyright>JoomBoost</copyright>
    <license>GNU/GPL http://www.gnu.org/copyleft/gpl.html</license>
    <authorEmail>support@joomBoost.com</authorEmail>
    <authorUrl>https://www.joomBoost.com</authorUrl>
	<version>##VERSION##</version>
	<description>
	<![CDATA[ Json formatter plugin for Joomcck 8 ]]>
	</description>
	<files>
		<filename plugin="formatter_json">formatter_json.php</filename>
		<folder>tmpl</folder>
	</files>
    <config>
        <fields name="params">
            <fieldset name="general" label="General">
                <field type="filelist" name="tmpl_list" filter="php$" hide_none="1" hide_default="1" directory="plugins/mint/formatter_json/tmpl/list" label="List template" default="json.php" />
                <field type="filelist" name="tmpl_full" filter="php$" hide_none="1" hide_default="1" directory="plugins/mint/formatter_json/tmpl/record" label="Full template" default="json.php" />
            </fieldset>
        </fields>
    </config>
</extension>
